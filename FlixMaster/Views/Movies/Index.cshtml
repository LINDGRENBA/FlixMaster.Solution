@{
  Layout = "_Layout";
}

@using FlixMaster.Models;
@model List<FlixMaster.Models.Movie>;

<h1>Movies</h1>

@if (@Model.Count == 0)
{
  <h3>No Movies have been added yet</h3>
}

@foreach (Movie movie in Model)
{
  @Html.ActionLink($"{movie.Title}", "Details", new { id = movie.MovieId})<br>
}

<br><p>@Html.ActionLink("Add new Movie", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>